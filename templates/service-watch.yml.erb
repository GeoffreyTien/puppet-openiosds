host: <%= @ipaddress %>
port: <%= @port %>
type: <%= @type %>
<% if @location -%>
location: <%= @location %>
<% else -%>
location: <%= @hostname %>
<% end -%>
<% if @_checks -%>
checks:
<% @_checks.each do |check| -%>
  - <%= check %>
<% end -%>
<% end -%>
<% if @_stats -%>
stats:
<% @_stats.each do |stat| -%>
  - <%= stat %>
<% end -%>
<% end -%>
