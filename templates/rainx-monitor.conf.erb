[Default]
daemon=false
pidfile=<%= @localstatedir %>/<%= @type %>>-<%= @num %>-monitor.pid

[Child]
command=/usr/sbin/httpd.worker -D FOREGROUND -f <%= @sysconfdir %>/<%= @type %>>-<%= @num %>-httpd.conf
respawn=true
rlimit.stack_size=1048576
rlimit.core_size=-1
rlimit.max_files=32768

[Service]
ns=<%= @options["ns"] %>
type=rainx
addr=<%= @options["ipaddress"] %>:<%= @options["port"] %>

[Volume]
docroot=<%= @sharedstatedir %>
